{
  "Hidden Files and Directories": {
    "Hide files": {
		"Input:": "mv filename .filename\n",
    	"Input:": "(Requires Apple Dev Tools)\nsetfile -a V filename\n"
    },
    "Hide Directories": {
      "Input:": "chflags hidden /secret/dir\n",
      "Unhide:": "chflags nohidden\n"
    },
    "Show all Hidden": {
      "Execute within terminal:": "defaults write com.apple.finder AppleShowAllFiles YES"
    }
  }
}
